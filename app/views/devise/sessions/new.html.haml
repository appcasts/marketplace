%h1.center-text.main-header Sign in

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  .row
    .small-6.small-centered.columns
      = f.input :email, :autofocus => true
      = f.input :password
      = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      = f.button :submit, "Sign in", :class => 'btn-primary expand radius'
      = render "devise/shared/links"
